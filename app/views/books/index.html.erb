<%= render 'shared/header' %>
<div class="container">
	<div class="row">
		<% if @book.errors.any? %>
		<div>
			<h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
			<ul>
				<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<div class="col-lg-3">
			<%= render 'shared/sidebar' %>
		</div>
		<div class="col-lg-9">
			<h1>Books#index</h1>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<% @books.each do |book| %>
				<tbody>
					<tr>
						<td><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg" %></td>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>