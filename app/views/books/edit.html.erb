<%= render 'shared/header' %>

<div class="container">
	<div class="row">
			<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>

			<% if @book.errors.any? %>
				<div>
					<h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
					<ul>
						<% @book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<%= form_for(@book) do |f| %>
				<div class="field row">
					<label for="inpuTitle">Title</label>
					<%= f.text_field :title, id: "inpuTitle", class: "col-xs-12" %><br>
				</div>
				<div class="field row">
					<label for="inputBody">Opinion</label>
					<%= f.text_area :body, id: "inputBody", class: "col-xs-12" %><br>
				</div>
				<div class="action row">
					<%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
				</div>
			<% end %>
			<%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %>
		</div>
	</div>
</div>
<%= render 'shared/footer' %>