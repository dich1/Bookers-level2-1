<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span class="logo">Bookers</span>
    </nav>
    <nav>
        <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right">
              <li>
                <%= link_to user_path(current_user) do %>
                  <p><span class="glyphicon glyphicon-home home">  Home</span></p>
                <% end %>
              </li>
              <li>
                <%= link_to users_path do %>
                  <p><span class="glyphicon glyphicon-user users">  Users</span></p>
                <% end %>
              </li>
              <li>
                <%= link_to books_path do %>
                  <p><span class="glyphicon glyphicon-book books">  Books</span></p>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete, notice: 'Signed out successfully.' do %>
                  <p><span class="glyphicon glyphicon-log-out logout"> logout</span></p>
                <% end %>
              </li>
          </ul>
        <% else %>
          <ul class="nav navbar-nav navbar-right">
              <li>
                <%= link_to root_path do %>
                  <p><span class="glyphicon glyphicon-home home">  Home</span></p>
                <% end %>
              </li>
              <li>
                <%= link_to home_about_path do %>
                  <p><span class="glyphicon glyphicon-link about"> About</span></p>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path do %>
                  <p><span class="glyphicon glyphicon-edit sign_up"> sign up</span></p>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path do %>
                  <p><span class="glyphicon glyphicon-log-in sign_in"> login</span></p>
                <% end %>
              </li>
          </ul>
        <% end %>
    </nav>
  </div>
</header>