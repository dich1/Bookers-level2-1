<%= render 'shared/header' %>

<div class="container">
	<h2>User info</h2>
	<div class="error">
		<% if @user.errors.any? %>
			<div>
				<h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
				<ul>
					<% @user.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
	</div>

	<%= form_for(@user) do |f| %>
	<div class="field">
		<label for="inputName">Name</label>
		<%= f.text_field :name, autofocus: true, id: "inputName" %><br>
	</div>
	<div class="field">
		<label for="user-image">Image</label><br>
		<%= f.attachment_field :profile_image, id: "user-image" %><br>
	</div>
	<div class="field">
		<label for="inputIntroduction">Introduction</label>
		<%= f.text_area :introduction, id: "inputIntroduction" %><br>
	</div>
	<div class="action">
		<%= f.submit "Update User" %>
	</div>
	<% end %>
</div>

<%= render 'shared/footer' %>