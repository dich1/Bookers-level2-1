<h2>User info</h2>

<% if @user.errors.any? %>
	<div>
		<h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_for(@user) do |f| %>
	<label for="inputName">Name</label>
	<%= f.text_field :name, autofocus: true, id: "inputName" %><br>
	<label for="user-image">Image</label><br>
	<%= f.attachment_field :profile_image, id: "user-image", placeholder: "プロフィール画像" %><br>
	<label for="inputIntroduction">Introduction</label>
	<%= f.text_area :introduction, id: "inputIntroduction" %><br>
	<%= f.submit "Update User" %>
<% end %>