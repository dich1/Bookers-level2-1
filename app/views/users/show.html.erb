<div>
	<h2>User info</h2>
	<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg" %>
	<table>
		<tbody>
			<tr>
				<th>name</th>
				<th><%= @user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= @user.introduction %></th>
			</tr>
		</tbody>
	</table>

	<% if @user.id == current_user.id %>
		<%= link_to "編集(bootstrap)", edit_user_path(@user) %>
	<% else %>
		<%= link_to "編集(bs)", user_path(@user.id) %>
	<% end %>
</div>

<div>
	<h2>New Book</h2>

	<%= form_for(@book) do |f| %>
		<label for="inpuTitle">Title</label>
		<%= f.text_field :title, id: "inpuTitle" %><br>
		<label for="inputBody">Body</label>
		<%= f.text_area :body, id: "inputBody" %><br>
		<%= f.submit "Create Book" %>
	<% end %>
</div>

<%= link_to '#Log out', destroy_user_session_path, method: :delete %>